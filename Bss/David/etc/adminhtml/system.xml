<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="tab_bss" translate="label" sortOrder="100">
            <label>BSS config</label>
        </tab>
        <section id="section_product" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Proudct</label>
            <tab>tab_bss</tab>
            <resource>Bss_David::product_config</resource>
            <group id="group_price" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <!-- add a new group with id active display -->
                <label>Set price default</label>
                <field id="price" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Price</label>
                    <comment>This text will change product price on the frontend.</comment>
                </field>
            </group>
        </section>
        <section id="section_general" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>General</label>
            <tab>tab_bss</tab>
            <resource>Bss_David::product_config</resource>
            <group id="group_general" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Setting general</label>
                <field id="pre_notify" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Notify before text</label>
                    <comment>This text will insert before notify.</comment>
                </field>
            </group>
        </section>
    </system>
</config>